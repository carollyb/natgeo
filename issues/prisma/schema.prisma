generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model issue {
  id       String   @id @map("_id")
  cover    String
  date     DateTime @db.Date
  file     String
  language String
  number   Int
  topics   String
}

model user {
  id        String @id @default(uuid()) @map("_id")
  full_name String
  username  String
  password  String
}

model refresh_token {
  id        String @id @default(uuid()) @map("_id")
  expiresIn Int
  user_id   String
}